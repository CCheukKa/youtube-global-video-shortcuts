{
    "manifest_version": 3,
    "name": "YouTube Arrow Keys Fix",
    "version": "1.0",
    "description": "Fixes YouTube's inconsistent player controls. Right and left always navigate. Up and down always volume control.",
    "icons": {
        "16": "icons/icon16.png",
        "32": "icons/icon32.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
    },
    "content_scripts": [
        {
            "matches": ["*://*.youtube.com/*"],
            "js": ["content.js"]
        }
    ]
}
